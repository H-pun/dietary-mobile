<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyDietary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorScheme">@color/md_theme_light_on_secondary_container</item>
        <item name="background">@color/md_theme_light_surface</item>
        <item name="colorAccent">@color/md_theme_light_surface_variant</item>
        <item name="colorPrimaryDark">@color/md_theme_light_on_surface</item>
    </style>

    <style name="Theme.MyDietary.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MyDietary.AppWidgetContainer" parent="Theme.MyDietary.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>